<% include ../partials/header %>
  <h1>See more about <%= country.name%></h1>

  <h3>
    Capital: <%=country.capital%>
  </h3>
  <h3>
    Population: <%= country.population%>
  </h3>
    <h3>
      Flag: <img src="/<%= country.flag%>" alt="Flag" width=200 height=200>
    </h3>
  <h3>
    <a href="/countries/<%= country.id%>/edit">Edit <%= country.name%></a>
  </h3>
  <h3>Cities

    <% country.cities.forEach(function(city){ %>
      <h4 class="text-muted"><%= city%></h4>
    <% })%>
  </h3>
  <h3>
    <form action='/countries/<%= country.id %>?_method=DELETE' method="POST">
      <input type="submit" value="DELETE" class="btn btn-danger">
    </form>
  </h3>

<% include ../partials/footer %>