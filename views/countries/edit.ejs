<% include ../partials/header %>

    <h2>Edit a new country</h2>
    <form action='/countries/<%= country.id %>?_method=PUT' method="POST">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" name="country[name]" id="" class="form-control" value= "<%= country.name%>" autofocus>
      </div>
      <div class="form-group">
        <label for="flag">Flag:</label>
        <input type="text" value= "<%= country.flag%>"  name="country[flag]" id="flag" class="form-control">
      </div>
      <div class="form-group">
        <label for="capital">Capital:</label>
        <input type="text" value= "<%= country.capital%>"  name="country[capital]" id="capital" class="form-control">
      </div>
      <div class="form-group">
        <label for="population">Population</label>
        <input type="number" value= "<%= country.population%>"  name="country[population]" id="population" class="form-control">
      </div>
      <div class="form-group">
        <label for="cities">Cities</label>
        <input type="cities" value= "<%= country.cities%>" name="cities" id="cities" class="form-control">
      </div>
      <div class="form-group">
        <input type="submit" value="Edit" class ="btn btn-info btn-lg">
      </div>
  </form>
<% include ../partials/footer %>